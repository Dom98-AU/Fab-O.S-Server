@namespace FabOS.WebServer.Components.Shared

@*
═══════════════════════════════════════════════════════════════
BREADCRUMB NAVIGATION COMPONENT
═══════════════════════════════════════════════════════════════
Modern hierarchical breadcrumb navigation
Design: Minimal with slash separators (2024/2025 standard)
Accessibility: WCAG 2.0 compliant
Dark Mode: Supported
Last Updated: 2025-11-04
═══════════════════════════════════════════════════════════════
*@

@if (Items != null && Items.Any())
{
    <nav aria-label="breadcrumb" class="breadcrumb-container">
        <ol class="breadcrumb-list">
            @for (int i = 0; i < Items.Count; i++)
            {
                var item = Items[i];
                var isLast = i == Items.Count - 1;

                <li class="breadcrumb-item">
                    @if (!isLast && !string.IsNullOrEmpty(item.Url))
                    {
                        <a href="@item.Url" class="breadcrumb-link">
                            @item.Label
                        </a>
                    }
                    else
                    {
                        <span class="breadcrumb-active">@item.Label</span>
                    }
                </li>

                @if (!isLast)
                {
                    <li class="breadcrumb-separator" aria-hidden="true">/</li>
                }
            }
        </ol>
    </nav>
}
