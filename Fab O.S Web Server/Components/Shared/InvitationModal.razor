@using FabOS.WebServer.Models.Entities
@using System.Net.Http.Json
@inject IHttpClientFactory HttpClientFactory
@inject ILogger<InvitationModal> Logger

@if (IsVisible)
{
    <div class="modal-overlay" @onclick="Close">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>Invite New User</h2>
                <button type="button" class="btn-close" @onclick="Close">&times;</button>
            </div>

            <div class="modal-body">
                @if (_successMessage != null)
                {
                    <div class="alert alert-success">
                        <strong>Success!</strong> @_successMessage
                    </div>
                }

                @if (_errorMessage != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error:</strong> @_errorMessage
                    </div>
                }

                <EditForm Model="_request" OnValidSubmit="HandleSendInvitationAsync">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label for="inviteEmail">Email Address</label>
                        <InputText id="inviteEmail"
                                   type="email"
                                   class="form-control"
                                   @bind-Value="_request.Email"
                                   placeholder="user@example.com" />
                        <ValidationMessage For="@(() => _request.Email)" />
                        <small class="form-text">An invitation will be sent to this email address</small>
                    </div>

                    <div class="form-group">
                        <label>Authentication Method</label>
                        <div class="auth-method-options">
                            <label class="auth-method-radio">
                                <input type="radio"
                                       name="authMethod"
                                       value="Both"
                                       checked="@(_request.AuthMethod == "Both")"
                                       @onchange="@(e => _request.AuthMethod = "Both")" />
                                <div class="auth-method-card">
                                    <strong>Email & Microsoft (Recommended)</strong>
                                    <p>User can choose either method</p>
                                </div>
                            </label>

                            <label class="auth-method-radio">
                                <input type="radio"
                                       name="authMethod"
                                       value="EmailPassword"
                                       checked="@(_request.AuthMethod == "EmailPassword")"
                                       @onchange="@(e => _request.AuthMethod = "EmailPassword")" />
                                <div class="auth-method-card">
                                    <strong>Email & Password Only</strong>
                                    <p>User creates password-based account</p>
                                </div>
                            </label>

                            <label class="auth-method-radio">
                                <input type="radio"
                                       name="authMethod"
                                       value="MicrosoftEntraId"
                                       checked="@(_request.AuthMethod == "MicrosoftEntraId")"
                                       @onchange="@(e => _request.AuthMethod = "MicrosoftEntraId")" />
                                <div class="auth-method-card">
                                    <strong>Microsoft Entra ID Only</strong>
                                    <p>SSO with work Microsoft account</p>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="Close">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-primary" disabled="@_sending">
                            @if (_sending)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                                <span>Sending...</span>
                            }
                            else
                            {
                                <span>Send Invitation</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        padding: 1rem;
    }

    .modal-content {
        background: white;
        border-radius: 8px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        max-width: 500px;
        width: 100%;
        max-height: 90vh;
        overflow-y: auto;
    }

    .modal-header {
        padding: 1.5rem;
        border-bottom: 1px solid #e0e0e0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-header h2 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        color: #333;
    }

    .btn-close {
        background: transparent;
        border: none;
        font-size: 2rem;
        line-height: 1;
        color: #999;
        cursor: pointer;
        padding: 0;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        transition: all 0.2s;
    }

    .btn-close:hover {
        background: #f5f5f5;
        color: #333;
    }

    .modal-body {
        padding: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        font-weight: 500;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        font-size: 1rem;
        transition: all 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-text {
        display: block;
        margin-top: 0.25rem;
        color: #666;
        font-size: 0.875rem;
    }

    .auth-method-options {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .auth-method-radio {
        cursor: pointer;
        margin: 0;
    }

    .auth-method-radio input[type="radio"] {
        display: none;
    }

    .auth-method-card {
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        padding: 1rem;
        transition: all 0.2s;
    }

    .auth-method-radio input[type="radio"]:checked + .auth-method-card {
        border-color: #667eea;
        background: #f0f4ff;
    }

    .auth-method-card:hover {
        border-color: #667eea;
    }

    .auth-method-card strong {
        display: block;
        color: #333;
        margin-bottom: 0.25rem;
        font-size: 0.95rem;
    }

    .auth-method-card p {
        margin: 0;
        color: #666;
        font-size: 0.875rem;
    }

    .alert {
        padding: 1rem;
        border-radius: 6px;
        margin-bottom: 1.5rem;
    }

    .alert-success {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    .alert strong {
        font-weight: 600;
    }

    .modal-footer {
        padding: 1.5rem;
        border-top: 1px solid #e0e0e0;
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #667eea;
        color: white;
    }

    .btn-primary:hover:not(:disabled) {
        background: #5568d3;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }

    .spinner-border {
        display: inline-block;
        width: 1rem;
        height: 1rem;
        vertical-align: text-bottom;
        border: 0.15em solid currentColor;
        border-right-color: transparent;
        border-radius: 50%;
        animation: spinner-border 0.75s linear infinite;
        margin-right: 0.5rem;
    }

    .spinner-border-sm {
        width: 0.875rem;
        height: 0.875rem;
        border-width: 0.125em;
    }

    @@keyframes spinner-border {
        to { transform: rotate(360deg); }
    }

    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback OnInvitationSent { get; set; }

    private SendInvitationRequest _request = new();
    private string? _successMessage;
    private string? _errorMessage;
    private bool _sending;

    private class SendInvitationRequest
    {
        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.EmailAddress]
        public string Email { get; set; } = string.Empty;

        public string AuthMethod { get; set; } = "Both";
    }

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            // Reset form when modal opens
            _request = new SendInvitationRequest { AuthMethod = "Both" };
            _successMessage = null;
            _errorMessage = null;
        }
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }

    private async Task HandleSendInvitationAsync()
    {
        _sending = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            var response = await httpClient.PostAsJsonAsync("/api/invitation/send", _request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<InvitationResult>();

                if (result?.Success == true)
                {
                    _successMessage = $"Invitation sent to {_request.Email}";

                    // Notify parent component
                    await OnInvitationSent.InvokeAsync();

                    // Auto-close after 2 seconds
                    await Task.Delay(2000);
                    await Close();
                }
                else
                {
                    _errorMessage = result?.Message ?? "Failed to send invitation";
                }
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                _errorMessage = "Failed to send invitation. Please try again.";
                Logger.LogError("Invitation failed: {Error}", error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error sending invitation");
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _sending = false;
        }
    }

    private class InvitationResult
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public int InvitationId { get; set; }
        public DateTime ExpiresAt { get; set; }
    }
}
