@rendermode InteractiveServer

<div class="modal @(_isVisible ? "show" : "")" tabindex="-1" style="display: @(_isVisible ? "block" : "none")">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="lucide-file-spreadsheet" style="width: 20px; height: 20px; margin-right: 8px;"></i>
                    Export Measurements to Excel
                </h5>
                <button type="button" class="btn-close" @onclick="Cancel" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                @if (_isExporting)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Exporting...</span>
                        </div>
                        <p class="text-muted">Generating Excel file...</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="lucide-alert-circle" style="width: 18px; height: 18px; margin-right: 8px;"></i>
                        @_errorMessage
                    </div>
                }
                else
                {
                    <div class="export-info mb-3">
                        <p class="mb-2">
                            <strong>Drawing:</strong> @DrawingNumber @(!string.IsNullOrEmpty(DrawingTitle) ? $" - {DrawingTitle}" : "")
                        </p>
                        <p class="mb-3">
                            <strong>Measurements:</strong> @MeasurementCount @(MeasurementCount == 1 ? "item" : "items")
                        </p>
                    </div>

                    <div class="export-options">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="groupByItem" @bind="_groupByItem" />
                            <label class="form-check-label" for="groupByItem">
                                Group by Catalogue Item
                                <small class="text-muted d-block">Combine measurements of the same item and sum quantities</small>
                            </label>
                        </div>
                    </div>
                }
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@_isExporting">
                    Cancel
                </button>
                <button type="button" class="btn btn-success" @onclick="ExportToExcel" disabled="@_isExporting">
                    <i class="lucide-download" style="width: 16px; height: 16px; margin-right: 6px;"></i>
                    Export to Excel
                </button>
            </div>
        </div>
    </div>
</div>

@if (_isVisible)
{
    <div class="modal-backdrop fade show"></div>
}

<style>
    .export-info {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.375rem;
        border-left: 4px solid #0d6efd;
    }

    .export-options {
        padding: 0.5rem 0;
    }

    .form-check-label small {
        margin-top: 0.25rem;
        font-size: 0.875rem;
    }
</style>
