@*
═══════════════════════════════════════════════════════════════
COMPONENT
═══════════════════════════════════════════════════════════════
Component: ExcelExportOptions
Purpose: Export worksheet/package to Excel with options
Features: Format selection, include totals, styling options
Module: Estimate
Last Updated: 2025-12-09
═══════════════════════════════════════════════════════════════
*@
@using FabOS.WebServer.Services.Interfaces.Estimate
@inject IWorksheetExcelService ExcelService
@inject IJSRuntime JSRuntime
@inject ILogger<ExcelExportOptions> Logger

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-file-excel me-2 text-success"></i>Export to Excel
                    </h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    @if (isExporting)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-success mb-3" role="status">
                                <span class="visually-hidden">Exporting...</span>
                            </div>
                            <h5>Generating Excel File...</h5>
                            <p class="text-muted">Please wait while we prepare your download.</p>
                        </div>
                    }
                    else
                    {
                        <!-- Export Type -->
                        <div class="mb-4">
                            <h6><i class="fas fa-layer-group me-2"></i>Export Scope</h6>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="exportType" id="exportWorksheet" value="worksheet" @onchange='() => exportType = "worksheet"' checked="@(exportType == "worksheet")" />
                                <label class="btn btn-outline-primary" for="exportWorksheet">
                                    <i class="fas fa-file me-1"></i>Single Worksheet
                                </label>

                                <input type="radio" class="btn-check" name="exportType" id="exportPackage" value="package" @onchange='() => exportType = "package"' disabled="@(!PackageId.HasValue)" />
                                <label class="btn btn-outline-primary" for="exportPackage">
                                    <i class="fas fa-folder me-1"></i>Entire Package
                                </label>
                            </div>
                            @if (exportType == "package" && PackageId.HasValue)
                            {
                                <small class="text-muted mt-1 d-block">
                                    <i class="fas fa-info-circle me-1"></i>All worksheets in the package will be exported as separate sheets.
                                </small>
                            }
                        </div>

                        <!-- Content Options -->
                        <div class="mb-4">
                            <h6><i class="fas fa-list-check me-2"></i>Include</h6>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="includeHeaders" id="includeHeaders" />
                                        <label class="form-check-label" for="includeHeaders">
                                            Column Headers
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="includeTotals" id="includeTotals" />
                                        <label class="form-check-label" for="includeTotals">
                                            Column Totals
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="includeFormulas" id="includeFormulas" />
                                        <label class="form-check-label" for="includeFormulas">
                                            Excel Formulas
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="includeHidden" id="includeHidden" />
                                        <label class="form-check-label" for="includeHidden">
                                            Hidden Columns
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Formatting Options -->
                        <div class="mb-4">
                            <h6><i class="fas fa-paint-brush me-2"></i>Formatting</h6>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="applyFormatting" id="applyFormatting" />
                                        <label class="form-check-label" for="applyFormatting">
                                            Apply Styling
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="autoFitColumns" id="autoFitColumns" />
                                        <label class="form-check-label" for="autoFitColumns">
                                            Auto-fit Columns
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="freezeHeaders" id="freezeHeaders" />
                                        <label class="form-check-label" for="freezeHeaders">
                                            Freeze Header Row
                                        </label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="addFilters" id="addFilters" />
                                        <label class="form-check-label" for="addFilters">
                                            Add Auto-Filter
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- File Name -->
                        <div class="mb-3">
                            <h6><i class="fas fa-file-signature me-2"></i>File Name</h6>
                            <div class="input-group">
                                <input type="text" class="form-control" @bind="fileName" placeholder="Enter file name" />
                                <span class="input-group-text">.xlsx</span>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-circle me-2"></i>@errorMessage
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Close" disabled="@isExporting">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-success" @onclick="ExecuteExport" disabled="@isExporting">
                        <i class="fas fa-download me-1"></i>Export
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public int WorksheetId { get; set; }
    [Parameter] public int? PackageId { get; set; }
    [Parameter] public string? WorksheetName { get; set; }
    [Parameter] public string? PackageName { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private bool isExporting = false;
    private string? errorMessage;

    // Export type
    private string exportType = "worksheet";

    // Content options
    private bool includeHeaders = true;
    private bool includeTotals = true;
    private bool includeFormulas = true;
    private bool includeHidden = false;

    // Formatting options
    private bool applyFormatting = true;
    private bool autoFitColumns = true;
    private bool freezeHeaders = true;
    private bool addFilters = false;

    // File name
    private string fileName = "";

    protected override void OnParametersSet()
    {
        if (IsVisible && string.IsNullOrEmpty(fileName))
        {
            fileName = $"{WorksheetName ?? "Worksheet"}_{DateTime.UtcNow:yyyyMMdd}";
        }
    }

    private async Task ExecuteExport()
    {
        isExporting = true;
        errorMessage = null;

        try
        {
            byte[] fileBytes;
            string downloadName;

            if (exportType == "package" && PackageId.HasValue)
            {
                fileBytes = await ExcelService.ExportPackageAsync(PackageId.Value);
                downloadName = $"{PackageName ?? "Package"}_{DateTime.UtcNow:yyyyMMdd}.xlsx";
            }
            else
            {
                fileBytes = await ExcelService.ExportWorksheetAsync(WorksheetId);
                downloadName = $"{fileName}.xlsx";
            }

            // Trigger download via JS interop
            await JSRuntime.InvokeVoidAsync("downloadFileFromBytes", downloadName, fileBytes);

            await Close();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error exporting to Excel");
            errorMessage = "Error generating Excel file. Please try again.";
        }
        finally
        {
            isExporting = false;
        }
    }

    private async Task Close()
    {
        errorMessage = null;
        fileName = "";
        exportType = "worksheet";
        await OnClose.InvokeAsync();
    }
}
