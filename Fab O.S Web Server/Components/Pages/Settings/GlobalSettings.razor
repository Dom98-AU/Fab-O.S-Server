@code {
    // Tab management
    private string activeTab = "configuration";

    // User management variables
    private List<User> users = new();
    private List<Company> companies = new();
    private User editingUser = new() { CompanyId = 1, IsActive = true };
    private bool showUserModal = false;
    private bool isLoadingUsers = false;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;

    // Invitation variables
    private List<PendingInvitationDto> pendingInvitations = new();
    private bool showInviteModal = false;

    // Configuration settings variables
    private List<FabOS.WebServer.Models.Entities.GlobalSettings> allSettings = new();
    private List<FabOS.WebServer.Models.Entities.GlobalSettings> systemSettings = new();
    private List<FabOS.WebServer.Models.Entities.GlobalSettings> securitySettings = new();
    private List<FabOS.WebServer.Models.Entities.GlobalSettings> displaySettings = new();

    private Dictionary<string, string> pendingChanges = new();
    private string successMessage = "";
    private string errorMessage = "";
    private bool isEditMode = false;

    // New setting form fields
    private string newSettingCategory = "";
    private string newSettingKey = "";
    private string newSettingValue = "";
    private string newSettingDescription = "";

    protected override async Task OnInitializedAsync()
    {
        // Determine active tab from URL
        var uri = new Uri(NavigationManager.Uri);
        if (uri.AbsolutePath.Contains("/users"))
        {
            activeTab = "users";
        }

        await LoadSettings();
        await LoadCompaniesAsync();

        if (activeTab == "users")
        {
            await LoadUsersAsync();
            await LoadPendingInvitationsAsync();
        }
    }

    // Tab navigation
    private async Task SelectTab(string tab)
    {
        activeTab = tab;

        if (tab == "users" && !users.Any() && !isLoadingUsers)
        {
            await LoadUsersAsync();
            await LoadPendingInvitationsAsync();
        }
    }

    private async Task LoadSettings()
    {
        try
        {
            allSettings = await SettingsService.GetAllGlobalSettingsAsync();

            systemSettings = allSettings.Where(s => s.Category == "System").ToList();
            securitySettings = allSettings.Where(s => s.Category == "Security").ToList();
            displaySettings = allSettings.Where(s => s.Category == "Display").ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load global settings");
            errorMessage = "Failed to load settings. Please try again.";
        }
    }

    private void UpdateSetting(FabOS.WebServer.Models.Entities.GlobalSettings setting, string? newValue)
    {
        if (newValue != null && newValue != setting.SettingValue)
        {
            pendingChanges[setting.SettingKey] = newValue;
            setting.SettingValue = newValue;
        }
    }

    private async Task SaveAllChanges()
    {
        try
        {
            foreach (var change in pendingChanges)
            {
                await SettingsService.SetGlobalSettingAsync(change.Key, change.Value);
            }

            pendingChanges.Clear();
            successMessage = "Settings saved successfully!";
            errorMessage = "";

            // Clear message after 3 seconds
            _ = Task.Delay(3000).ContinueWith(_ =>
            {
                successMessage = "";
                InvokeAsync(StateHasChanged);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to save settings");
            errorMessage = "Failed to save settings. Please try again.";
        }
    }

    private async Task AddNewSetting()
    {
        if (string.IsNullOrWhiteSpace(newSettingCategory) ||
            string.IsNullOrWhiteSpace(newSettingKey) ||
            string.IsNullOrWhiteSpace(newSettingValue))
        {
            errorMessage = "Please fill in all required fields.";
            return;
        }

        try
        {
            var fullKey = $"{newSettingCategory}.{newSettingKey}";
            await SettingsService.SetGlobalSettingAsync(fullKey, newSettingValue, newSettingCategory, newSettingDescription);

            // Clear form
            newSettingCategory = "";
            newSettingKey = "";
            newSettingValue = "";
            newSettingDescription = "";

            // Reload settings
            await LoadSettings();

            successMessage = "New setting added successfully!";
            errorMessage = "";

            // Clear message after 3 seconds
            _ = Task.Delay(3000).ContinueWith(_ =>
            {
                successMessage = "";
                InvokeAsync(StateHasChanged);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to add new setting");
            errorMessage = "Failed to add new setting. Please try again.";
        }
    }

    private void EnableEditMode()
    {
        isEditMode = true;
    }

    private void DisableEditMode()
    {
        isEditMode = false;
    }

    // User Management Methods
    private async Task LoadUsersAsync()
    {
        try
        {
            isLoadingUsers = true;
            users = await UserService.GetAllUsersAsync();
            Logger.LogInformation("Loaded {Count} users", users.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading users");
            errorMessage = "Error loading users: " + ex.Message;
        }
        finally
        {
            isLoadingUsers = false;
        }
    }

    private async Task LoadCompaniesAsync()
    {
        try
        {
            companies = await DbContext.Companies
                .Where(c => c.IsActive)
                .OrderBy(c => c.Name)
                .ToListAsync();

            Logger.LogInformation("Loaded {Count} active companies", companies.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading companies");
            errorMessage = "Error loading companies: " + ex.Message;
        }
    }

    private void ShowCreateUserModal()
    {
        editingUser = new User
        {
            CompanyId = 1,
            IsActive = true,
            CreatedDate = DateTime.UtcNow,
            LastModified = DateTime.UtcNow
        };
        newPassword = string.Empty;
        confirmPassword = string.Empty;
        showUserModal = true;
    }

    private void EditUser(User user)
    {
        editingUser = new User
        {
            Id = user.Id,
            Username = user.Username,
            Email = user.Email,
            FirstName = user.FirstName,
            LastName = user.LastName,
            CompanyId = user.CompanyId,
            JobTitle = user.JobTitle,
            PhoneNumber = user.PhoneNumber,
            IsActive = user.IsActive,
            PasswordHash = user.PasswordHash,
            SecurityStamp = user.SecurityStamp,
            CreatedDate = user.CreatedDate,
            LastModified = DateTime.UtcNow
        };
        showUserModal = true;
    }

    private async Task SaveUser()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(editingUser.Username) || string.IsNullOrWhiteSpace(editingUser.Email))
            {
                errorMessage = "Username and Email are required";
                return;
            }

            if (editingUser.CompanyId <= 0)
            {
                errorMessage = "Please select a valid company";
                return;
            }

            if (editingUser.Id == 0)
            {
                if (string.IsNullOrWhiteSpace(newPassword) || string.IsNullOrWhiteSpace(confirmPassword))
                {
                    errorMessage = "Password is required for new users";
                    return;
                }

                if (newPassword != confirmPassword)
                {
                    errorMessage = "Passwords do not match";
                    return;
                }

                await UserService.CreateUserAsync(editingUser, newPassword);
                successMessage = $"User '{editingUser.Username}' created successfully";
            }
            else
            {
                await UserService.UpdateUserAsync(editingUser);
                successMessage = $"User '{editingUser.Username}' updated successfully";
            }

            await LoadUsersAsync();
            CloseUserModal();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving user");
            errorMessage = "Error saving user: " + ex.Message;
        }
    }

    private async Task DeleteUser(int userId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this user?"))
            return;

        try
        {
            await UserService.DeleteUserAsync(userId);
            successMessage = "User deleted successfully";
            await LoadUsersAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting user {UserId}", userId);
            errorMessage = "Error deleting user: " + ex.Message;
        }
    }

    private void CloseUserModal()
    {
        showUserModal = false;
        errorMessage = null;
    }

    // Invitation Management Methods
    private async Task LoadPendingInvitationsAsync()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            var response = await httpClient.GetAsync("/api/invitation/pending");

            if (response.IsSuccessStatusCode)
            {
                pendingInvitations = await response.Content.ReadFromJsonAsync<List<PendingInvitationDto>>() ?? new();
                Logger.LogInformation("Loaded {Count} pending invitations", pendingInvitations.Count);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading pending invitations");
        }
    }

    private void ShowInviteUserModal()
    {
        showInviteModal = true;
    }

    private async Task CloseInviteModal()
    {
        showInviteModal = false;
        await Task.CompletedTask;
    }

    private async Task HandleInvitationSent()
    {
        await LoadPendingInvitationsAsync();
        StateHasChanged();
    }

    private async Task ResendInvitation(int invitationId)
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            var response = await httpClient.PostAsync($"/api/invitation/resend/{invitationId}", null);

            if (response.IsSuccessStatusCode)
            {
                successMessage = "Invitation resent successfully";
                await LoadPendingInvitationsAsync();
            }
            else
            {
                errorMessage = "Failed to resend invitation";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error resending invitation {InvitationId}", invitationId);
            errorMessage = "Error resending invitation: " + ex.Message;
        }
    }

    private async Task RevokeInvitation(int invitationId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to revoke this invitation?"))
            return;

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            var response = await httpClient.PostAsync($"/api/invitation/revoke/{invitationId}", null);

            if (response.IsSuccessStatusCode)
            {
                successMessage = "Invitation revoked successfully";
                await LoadPendingInvitationsAsync();
            }
            else
            {
                errorMessage = "Failed to revoke invitation";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error revoking invitation {InvitationId}", invitationId);
            errorMessage = "Error revoking invitation: " + ex.Message;
        }
    }

    // DTO for pending invitations
    private class PendingInvitationDto
    {
        public int Id { get; set; }
        public string Email { get; set; } = string.Empty;
        public string InvitedBy { get; set; } = string.Empty;
        public string AuthMethod { get; set; } = string.Empty;
        public DateTime CreatedAt { get; set; }
        public DateTime ExpiresAt { get; set; }
        public string Status { get; set; } = string.Empty;
    }
}