    }

    .btn-link {
        background: transparent;
        color: #667eea;
        text-decoration: underline;
    }

    .btn-link:hover {
        color: #5568d3;
    }

    .btn-lg {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
    }

    .spinner-border {
        display: inline-block;
        width: 1rem;
        height: 1rem;
        vertical-align: text-bottom;
        border: 0.15em solid currentColor;
        border-right-color: transparent;
        border-radius: 50%;
        animation: spinner-border 0.75s linear infinite;
        margin-right: 0.5rem;
    }

    .spinner-border-sm {
        width: 0.875rem;
        height: 0.875rem;
        border-width: 0.125em;
    }

    @@keyframes spinner-border {
        to { transform: rotate(360deg); }
    }

    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

@code {
    [Parameter]
    public string Token { get; set; } = string.Empty;

    private InvitedSignupRequest _request = new();
    private string _confirmPassword = string.Empty;
    private InviteAuthMethod? _authMethod;
    private InvitationDetails? _invitationDetails;
    private string? _errorMessage;
    private bool _loading = true;
    private bool _invitationInvalid;
    private bool _submitting;

    private class InvitationDetails
    {
        public string Email { get; set; } = string.Empty;
        public string CompanyName { get; set; } = string.Empty;
        public string CompanyCode { get; set; } = string.Empty;
        public string InvitedBy { get; set; } = string.Empty;
        public string AuthMethod { get; set; } = string.Empty;
        public DateTime ExpiresAt { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await ValidateInvitationTokenAsync();
    }

    private async Task ValidateInvitationTokenAsync()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            var response = await httpClient.GetAsync($"/api/signup/invite/{Token}");

            if (response.IsSuccessStatusCode)
            {
                _invitationDetails = await response.Content.ReadFromJsonAsync<InvitationDetails>();
                _request.Email = _invitationDetails?.Email ?? "";
                _request.Token = Token;
                _invitationInvalid = false;
            }
            else
            {
                _invitationInvalid = true;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error validating invitation token");
            _invitationInvalid = true;
        }
        finally
        {
            _loading = false;
        }
    }

    private void SelectAuthMethod(InviteAuthMethod method)
    {
        _authMethod = method;
    }

    private async Task HandleMicrosoftSignInAsync()
    {
        _submitting = true;

        try
        {
            // Store the invitation token in session/local storage for the callback
            // Then redirect to Microsoft auth endpoint
            var returnUrl = $"/signup/invite/{Token}";
            Navigation.NavigateTo($"/signin-microsoft?returnUrl={Uri.EscapeDataString(returnUrl)}", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error initiating Microsoft sign-in");
            _errorMessage = "Failed to initiate Microsoft sign-in. Please try again.";
            _submitting = false;
        }
    }

    private async Task HandleSubmitAsync()
    {
        if (_request.Password != _confirmPassword)
        {
            _errorMessage = "Passwords do not match";
            return;
        }

        _submitting = true;
        _errorMessage = null;

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            var response = await httpClient.PostAsJsonAsync("/api/signup/accept-invite", _request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<InviteAcceptResult>();

                if (result?.Success == true)
                {
                    // Redirect to company workspace
                    Navigation.NavigateTo(result.RedirectUrl ?? "/home", forceLoad: true);
                }
                else
                {
                    _errorMessage = "Failed to accept invitation. Please try again.";
                }
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                _errorMessage = "Failed to accept invitation. Please try again.";
                Logger.LogError("Invitation acceptance failed: {Error}", error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error accepting invitation");
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _submitting = false;
        }
    }

    private class InviteAcceptResult
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public string RedirectUrl { get; set; } = string.Empty;
    }
}
