        margin: 0;
    }

    .microsoft-signin {
        text-align: center;
        padding: 2rem 0;
    }

    .info-message {
        color: #666;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .form-section {
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        font-weight: 500;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e0e0e0;
        border-radius: 6px;
