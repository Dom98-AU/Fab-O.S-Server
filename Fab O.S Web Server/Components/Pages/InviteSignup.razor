@page "/signup/invite/{token}"
@using FabOS.WebServer.Models.Dto.Signup
@using FabOS.WebServer.Models.Entities
@using System.Net.Http.Json
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory
@inject ILogger<InviteSignup> Logger

<PageTitle>Accept Invitation - Fab.OS Platform</PageTitle>

<div class="invite-signup-container">
    <div class="invite-signup-card">
        @if (_loading)
        {
            <div class="loading-state">
                <div class="spinner-border" role="status"></div>
                <p>Validating invitation...</p>
            </div>
        }
        else if (_invitationInvalid)
        {
            <div class="invalid-state">
                <div class="error-icon">‚ö†Ô∏è</div>
                <h1>Invalid Invitation</h1>
                <p>This invitation link is invalid or has expired.</p>
                <div class="actions">
                    <a href="/signup" class="btn btn-primary">Create New Workspace</a>
                    <a href="/login" class="btn btn-secondary">Sign In</a>
                </div>
            </div>
        }
        else
        {
            <div class="invite-header">
                <div class="welcome-icon">üëã</div>
                <h1>You've Been Invited!</h1>
                <p><strong>@_invitationDetails?.InvitedBy</strong> has invited you to join <strong>@_invitationDetails?.CompanyName</strong></p>
            </div>

            @if (_errorMessage != null)
            {
                <div class="alert alert-danger">@_errorMessage</div>
            }

            <!-- Auth Method Selection -->
            @if (_authMethod == null)
            {
                <div class="auth-method-selection">
                    <h3>Choose how you'd like to sign up</h3>

                    @if (_invitationDetails?.AuthMethod == "MicrosoftEntraId" || _invitationDetails?.AuthMethod == "Both")
                    {
                        <button type="button"
                                class="auth-method-btn microsoft"
                                @onclick="() => SelectAuthMethod(InviteAuthMethod.MicrosoftEntraId)">
                            <div class="auth-icon">
                                <svg width="24" height="24" viewBox="0 0 24 24">
                                    <path fill="#f35325" d="M1 1h10v10H1z"/>
                                    <path fill="#81bc06" d="M13 1h10v10H13z"/>
                                    <path fill="#05a6f0" d="M1 13h10v10H1z"/>
                                    <path fill="#ffba08" d="M13 13h10v10H13z"/>
                                </svg>
                            </div>
                            <div class="auth-content">
                                <h4>Sign in with Microsoft</h4>
                                <p>Use your work account for single sign-on</p>
                            </div>
                        </button>
                    }

                    @if (_invitationDetails?.AuthMethod == "EmailPassword" || _invitationDetails?.AuthMethod == "Both")
                    {
                        <button type="button"
                                class="auth-method-btn email"
                                @onclick="() => SelectAuthMethod(InviteAuthMethod.EmailPassword)">
                            <div class="auth-icon">üìß</div>
                            <div class="auth-content">
                                <h4>Sign up with Email & Password</h4>
                                <p>Create a password for your account</p>
                            </div>
                        </button>
                    }
                </div>
            }
            else if (_authMethod == InviteAuthMethod.MicrosoftEntraId)
            {
                <div class="microsoft-signin">
                    <p class="info-message">You'll be redirected to Microsoft to complete sign-in with your work account.</p>
                    <button type="button"
                            class="btn btn-primary btn-lg"
                            @onclick="HandleMicrosoftSignInAsync"
                            disabled="@_submitting">
                        @if (_submitting)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span>Redirecting...</span>
                        }
                        else
                        {
                            <span>Continue with Microsoft</span>
                        }
                    </button>
                    <button type="button"
                            class="btn btn-link"
                            @onclick="() => _authMethod = null">
                        Choose different method
                    </button>
                </div>
            }
            else if (_authMethod == InviteAuthMethod.EmailPassword)
            {
                <EditForm Model="_request" OnValidSubmit="HandleSubmitAsync">
                    <DataAnnotationsValidator />

                    <div class="form-section">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <InputText id="firstName"
                                       class="form-control"
                                       @bind-Value="_request.FirstName"
                                       placeholder="John" />
                            <ValidationMessage For="@(() => _request.FirstName)" />
                        </div>

                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <InputText id="lastName"
                                       class="form-control"
                                       @bind-Value="_request.LastName"
                                       placeholder="Smith" />
                            <ValidationMessage For="@(() => _request.LastName)" />
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <InputText id="email"
                                       type="email"
                                       class="form-control"
                                       @bind-Value="_request.Email"
                                       disabled
                                       placeholder="@_invitationDetails?.Email" />
                            <small class="form-text">This is the email address you were invited with</small>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <InputText id="password"
                                       type="password"
                                       class="form-control"
                                       @bind-Value="_request.Password"
                                       placeholder="Minimum 8 characters" />
                            <ValidationMessage For="@(() => _request.Password)" />
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <InputText id="confirmPassword"
                                       type="password"
                                       class="form-control"
                                       @bind-Value="_confirmPassword"
                                       placeholder="Re-enter your password" />
                            @if (!string.IsNullOrEmpty(_request.Password) && !string.IsNullOrEmpty(_confirmPassword) && _request.Password != _confirmPassword)
                            {
                                <span class="validation-message">Passwords do not match</span>
                            }
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit"
                                class="btn btn-primary btn-lg"
                                disabled="@(_submitting || _request.Password != _confirmPassword)">
                            @if (_submitting)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                                <span>Creating Account...</span>
                            }
                            else
                            {
                                <span>Accept Invitation</span>
                            }
                        </button>
                        <button type="button"
                                class="btn btn-link"
                                @onclick="() => _authMethod = null">
                            Choose different method
                        </button>
                    </div>
                </EditForm>
            }
        }
    </div>
</div>

<style>
