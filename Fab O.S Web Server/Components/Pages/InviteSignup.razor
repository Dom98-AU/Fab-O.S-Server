        font-size: 1.8rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .invalid-state p {
        color: #666;
        margin-bottom: 2rem;
    }

    .invalid-state .actions {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .invite-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .welcome-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .invite-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 1rem;
    }

    .invite-header p {
        color: #666;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .invite-header strong {
        color: #667eea;
    }

    .auth-method-selection {
        margin: 2rem 0;
    }

    .auth-method-selection h3 {
        font-size: 1.3rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .auth-method-btn {
        width: 100%;
        padding: 1.5rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        background: white;
        cursor: pointer;
        display: flex;
        align-items: center;
