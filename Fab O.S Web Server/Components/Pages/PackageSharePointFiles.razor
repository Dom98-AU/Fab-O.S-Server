@page "/{tenantSlug}/trace/packages/{packageId:int}/sharepoint-files"
@rendermode InteractiveServer
@using FabOS.WebServer.Components.Shared
@using FabOS.WebServer.Components.Shared.Interfaces
@using FabOS.WebServer.Services.Interfaces

<PageTitle>Package SharePoint Files - @package?.PackageNumber - Fab.OS</PageTitle>

<!-- Standard Toolbar -->
<StandardToolbar ActionProvider="@this" OnSearch="@OnSearchChanged" SearchPlaceholder="Search files..." />

<!-- Content -->
<div class="sharepoint-files-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Loading package files...</p>
        </div>
    }
    else if (package == null)
    {
        <div class="error-container">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>Package not found</h3>
            <button class="btn btn-primary" @onclick="NavigateBack">
                <i class="fas fa-arrow-left"></i>
                Back to Package
            </button>
        </div>
    }
    else if (!sharePointConfigured)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <div class="alert-content">
                <h4>SharePoint Not Configured</h4>
                <p>SharePoint integration needs to be configured before you can upload or view files.</p>
                <button class="btn btn-primary" @onclick="NavigateToSharePointSetup">
                    <i class="fas fa-cog"></i>
                    Configure SharePoint
                </button>
            </div>
        </div>
    }
    else if (!sharePointConnected)
    {
        <div class="alert alert-danger">
            <i class="fas fa-times-circle"></i>
            <div class="alert-content">
                <h4>SharePoint Connection Failed</h4>
                <p>@sharePointError</p>
                <button class="btn btn-secondary" @onclick="RetryConnection">
                    <i class="fas fa-sync"></i>
                    Retry Connection
                </button>
            </div>
        </div>
    }
    else if (!folderStructureExists)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <div class="alert-content">
                <h4>SharePoint Folder Structure Not Created</h4>
                <p>The folder structure for this takeoff hasn't been created yet. Click the button below to create the folder hierarchy: Takeoff > Revision > Package</p>
                <button class="btn btn-primary" @onclick="CreateFolderStructure" disabled="@isCreatingFolderStructure">
                    @if (isCreatingFolderStructure)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Creating Folder Structure...</span>
                    }
                    else
                    {
                        <i class="fas fa-folder-plus"></i>
                        <span>Create Folder Structure</span>
                    }
                </button>
            </div>
        </div>
    }
    else
    {
        <!-- Unified View Toolbar -->
        <TableViewToolbar TItem="SharePointFileInfo"
                         EnableViewPreferences="true"
                         EnableColumnManagement="true"
                         EntityType="SharePointFile"
                         CurrentViewState="@currentViewState"
                         OnViewLoaded="@HandleViewLoaded"
                         HasUnsavedChanges="@hasUnsavedChanges"
                         Columns="@managedColumns"
                         OnColumnsChanged="@HandleColumnsChanged"
                         HasCustomColumnConfig="@hasCustomColumnConfig"
                         CurrentView="@currentView"
                         OnViewChanged="@OnViewChanged" />

        <!-- Folders Section (rendered separately above files) -->
        @if (filteredFolders.Any())
        {
            <div class="folders-section mb-3">
                @if (currentView == GenericViewSwitcher<SharePointFileInfo>.ViewType.Table)
                {
                    <table class="table table-hover">
                        <tbody>
                            @foreach (var folder in filteredFolders.OrderBy(f => f.Name))
                            {
                                <tr class="folder-row" @ondblclick="() => NavigateToFolder(folder)">
                                    <td width="30px"></td>
                                    <td><i class="fas fa-folder text-warning me-2"></i>@folder.Name</td>
                                    <td width="100px">Folder</td>
                                    <td width="100px">—</td>
                                    <td width="150px">@folder.CreatedDateTime.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="folders-grid">
                        @foreach (var folder in filteredFolders.OrderBy(f => f.Name))
                        {
                            <div class="folder-card-item" @ondblclick="() => NavigateToFolder(folder)">
                                <div class="folder-icon">
                                    <i class="fas fa-folder fa-3x text-warning"></i>
                                </div>
                                <div class="folder-name">@folder.Name</div>
                                <div class="folder-meta text-muted">Folder</div>
                            </div>
                        }
                    </div>
                }
            </div>
        }

        <!-- Files Views -->
        @if (filteredFiles.Any())
        {
            @if (currentView == GenericViewSwitcher<SharePointFileInfo>.ViewType.Table)
            {
                <GenericTableView TItem="SharePointFileInfo"
                                 Items="@filteredFiles"
                                 AllItems="@allFiles"
                                 Columns="@tableColumns"
                                 AllowSelection="true"
                                 ShowCheckboxes="true"
                                 SelectedItems="@selectedTableItems"
                                 SelectedItemsChanged="@HandleTableSelectionChanged"
                                 OnRowClick="@HandleFileClick"
                                 OnRowDoubleClick="@HandleFileDoubleClick"
                                 EnableAdvancedFeatures="true"
                                 EnableColumnManagement="true"
                                 EnableFiltering="false"
                                 EnableViewPreferences="true"
                                 EntityType="SharePointFile" />
            }
            else if (currentView == GenericViewSwitcher<SharePointFileInfo>.ViewType.List)
            {
                <GenericListView TItem="SharePointFileInfo"
                                Items="@filteredFiles"
                                OnItemClick="@HandleFileClick"
                                OnItemDoubleClick="@HandleFileDoubleClick"
                                AllowSelection="true"
                                SelectedItems="@selectedListItems"
                                SelectedItemsChanged="@HandleListSelectionChanged">
                    <CustomListItemContent Context="file">
                        <div class="file-list-item">
                            <div class="file-icon">
                                @GetFileIcon(file)
                            </div>
                            <div class="file-info">
                                <div class="file-name">@file.Name</div>
                                <div class="file-meta">
                                    <span>@FormatFileSize(file.Size)</span>
                                    <span class="ms-2">@file.LastModifiedDateTime.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>
                    </CustomListItemContent>
                </GenericListView>
            }
            else if (currentView == GenericViewSwitcher<SharePointFileInfo>.ViewType.Card)
            {
                <GenericCardView TItem="SharePointFileInfo"
                                Items="@filteredFiles"
                                OnItemClick="@HandleFileClick"
                                OnItemDoubleClick="@HandleFileDoubleClick"
                                AllowSelection="true"
                                SelectedItems="@selectedCardItems"
                                SelectedItemsChanged="@HandleCardSelectionChanged">
                    <CustomCardContent Context="file">
                        <div class="file-card">
                            <div class="file-card-icon">
                                @GetFileIcon(file, "fa-3x")
                            </div>
                            <div class="file-card-body">
                                <h5 class="file-card-title">@file.Name</h5>
                                <p class="file-card-meta">
                                    <span class="badge bg-secondary">@GetFileType(file)</span>
                                    <span class="ms-2">@FormatFileSize(file.Size)</span>
                                </p>
                            </div>
                        </div>
                    </CustomCardContent>
                </GenericCardView>
            }
        }
        else if (!filteredFolders.Any())
        {
            <div class="no-results">
                <i class="fas fa-folder-open"></i>
                <h3>Empty Folder</h3>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <p>No files or folders match your search criteria</p>
                }
                else
                {
                    <p>No files or folders in this location. Use the 'Upload Files' or 'Create Folder' actions above.</p>
                }
            </div>
        }
    }
</div>

<!-- Takeoff PDF Modal -->
<TakeoffPdfModal @bind-IsVisible="showTakeoffModal"
                 PackageDrawingId="@selectedDrawingId"
                 Title="@GetTakeoffModalTitle()"
                 OnClose="CloseTakeoffModal" />

<!-- File Upload Modal -->
<FileUploadModal @ref="uploadModal"
                 @bind-IsVisible="showUploadModal"
                 OnUpload="@HandleUploadRequest"
                 OnUploadComplete="@HandleUploadComplete"
                 OnClose="@(() => showUploadModal = false)" />

@code {
    private RenderFragment GetFileIcon(SharePointFileInfo file, string sizeClass = "")
    {
        var iconClass = GetFileIconClass(file);
        var fullClass = string.IsNullOrEmpty(sizeClass) ? iconClass : $"{iconClass} {sizeClass}";

        return __builder =>
        {
            <i class="@fullClass"></i>
        };
    }
}
