    }
    
    .fabos-control-icon {
        font-size: 18px;
        font-weight: bold;
        line-height: 1;
    }
    
    .fabos-control-icon.active {
        color: #4f9bff;
        text-shadow: 0 0 8px rgba(79, 155, 255, 0.5);
    }
    
    .fabos-control-icon.expand-arrow {
